= form_for @programmer do |f|
  - if @programmer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@programmer.errors.count, "error")} prohibited this programmer from being saved:"
      %ul
        - @programmer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :expertise_lvl
    = f.number_field :expertise_lvl
  .actions
    = f.submit 'Save'
